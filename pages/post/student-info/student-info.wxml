<!--pages/work/student-info/student-info.wxml-->
<view class="topic" style="background-color: greenyellow;">
  <text style="font-size: large;">完善学生信息</text>
</view>

<!-- 任务详情 -->
<view class="topic" style="margin-bottom: -15rpx;">
  <text style="font-size: large;">任务详情</text>
</view>
<!-- 时间 -->
<label>
  <view class="{{isDataRight&&isWeekRight&&isTimeRight ? 'text-box' : 'text-box-warning'}}">
    <text class="information-box">时间*</text>
    <view>
    <!-- 日期 -->
      <view style="margin-top: 2rpx;display: flex;margin-bottom: 15rpx;">
        <!-- 起始日期 -->
        <picker mode="date" start="{{currentDate}}" end="{{endDate}}" model:value="{{date0}}">
          {{date0}}
        </picker>
        ~
        <!-- 结束日期 -->
        <picker mode="date" start="{{data0}}" end="{{endDate1}}" model:value="{{date1}}">
          {{date1}}
        </picker>
      </view>
    <!-- 星期 -->
      <view style="margin-top: 2rpx;display: flex;margin-bottom: 15rpx;">
        <view class="week-box"><text>星期</text></view>
        <view wx:for="{{allNum}}" class="{{weekDay[index] ?'week-day-box-active' :'week-day-box'}}" data-weekid="{{index}}" bind:tap="toChangeWeek"><text>{{item}}</text></view>
      </view>
    <!-- 时间段1 -->
      <view style="margin-top: 2rpx;display: flex;">
      <picker mode="time" start="06:00" end="22:00" value="{{time0s}}" bindchange="toChangeTime" data-timeid="0s">
        <view>
          <view class="picker">{{time0s}}</view>
        </view>
      </picker>
      <view style="margin-left: 80rpx;margin-right: 80rpx;">~</view>
      <picker mode="time" start="{{time0s}}" end="22:00" value="{{time0e}}" bindchange="toChangeTime" data-timeid="0e">
        <view>
          <view class="picker">{{time0e}}</view>
        </view>
      </picker>
      <image src="../../../pics/button/push.png" style="height: 50rpx;width: 50rpx;margin-left: 100rpx;" bind:tap="toPushTime" wx:if="{{timeNum===1}}"/>
      </view>
    <!-- 时间段2 -->
      <view style="margin-top: 40rpx;display: flex;" wx:if="{{timeNum===2}}">
      <picker mode="time" start="{{time0e}}" end="22:00" value="{{time1s}}" bindchange="toChangeTime" data-timeid="1s">
        <view>
          <view class="picker">{{time1s}}</view>
        </view>
      </picker>
      <view style="margin-left: 80rpx;margin-right: 80rpx;">~</view>
      <picker mode="time" start="{{time1s}}" end="22:00" value="{{time1e}}" bindchange="toChangeTime" data-timeid="1e">
        <view>
          <view class="picker">{{time1e}}</view>
        </view>
      </picker>
      <image src="../../../pics/button/delete.png" style="height: 50rpx;width: 50rpx;margin-left: 100rpx;" bind:tap="toDeleteTime"/>
      </view>
    </view>
  </view>
  <view class="line"></view>
</label>
<!-- 地点 -->
<label>
  <view class="{{isRegionRight ? 'text-box' : 'text-box-warning'}}">
    <text class="information-box">地点*</text>
    <view style="width: 550rpx;">
      <picker mode="region" model:value="{{region}}" level="sub-district" custom-item="无">
        <view style="width: 550rpx;margin-bottom: 20rpx;"><text>{{region[0]}} {{region[1]}} {{region[2]}}</text></view>
        <view wx:if="{{region[3]}}" style="margin-bottom: 20rpx;"><text>{{region[3]}}</text></view>
        <view wx:else style="margin-bottom: 20rpx;font-size: small;"><text>请点击此处完善街道信息</text></view>
      </picker>
      <view class="region-detail">
        <input maxlength="50" placeholder="详细地址(非必填)" type="text" model:value="{{detailPosition}}"/></view>
      </view>   
  </view>
</label>


<!-- 学生信息 -->
<view class="topic" style="margin-bottom: -15rpx;">
  <text style="font-size: large;">学生信息</text>
</view>
<!-- 学生姓名 -->
<label>
  <view class="text-box">
    <text class="information-box">姓名</text>
    <view class="region-detail" style="width: 290rpx;margin-right: 40rpx;">
    <input maxlength="10" type="text" model:value="{{studentName}}" style="width: 290rpx;" placeholder="非必填"/>
    </view>

  </view>
  <view class="line"></view>
</label>
<!-- 年级 -->
<label>
  <view class="{{isGradeRight ? 'text-box' : 'text-box-warning'}}">
    <text class="information-box">年级*</text>
    <!-- 选择学校等级 -->
      <view style="padding-right: 100rpx;" bind:tap="toChangeGradeType">
        <text wx:if="{{gradeType===null}}" style="color: gray;">学龄</text>
        {{grade.type[gradeType]}}
      </view>
    <!-- 选择年级 -->
      <view wx:if="{{gradeType!==3&&gradeType!==null&&gradeType!==4}}" style="padding-right: 100rpx;" bind:tap="toChangeGradeYear">
        <text wx:if="{{gradeYear===null}}" style="color: gray;">年级</text>{{grade.grades[gradeType][gradeYear]}}
      </view>
      <view class="input-box" wx:if="{{gradeType===4}}">
        <input style="margin-left: 10rpx;margin-right: 10rpx;" type="text" model:value="{{otherGrade}}" placeholder="请输入学校类型" maxlength="15"/>
      </view>
  </view>
  <view class="line"></view>
</label>
<!-- 科目 -->
<label>
  <view class="{{isSubjectReady ? 'text-box' : 'text-box-warning'}}">
    <text class="information-box">科目*</text>
    
    <checkbox-group bindchange="toChooseSubject">
    <view style="display: flex;flex-wrap: wrap;width: 550rpx;">
      <view style="width: 275rpx;margin-top: 10rpx;margin-bottom: 10rpx;" wx:for="{{subjects}}">
        <checkbox value="{{item}}"/>{{item}}
      </view>
      <view style="width: 550rpx;display: flex;margin-top: 10rpx;">
        <checkbox model:checked="{{hasOtherSubject}}" value="其他"/>其他
        <view style="margin-left: 60rpx;" class="input-box" wx:if="{{hasOtherSubject}}">
        <input maxlength="15" style="margin-left: 10rpx;margin-right: 10rpx;" type="text" model:value="{{otherSubject}}" placeholder="更多科目"/>
        </view>
      </view>
    </view>
    </checkbox-group>
  </view>
  <view class="line"></view>
</label>
<!-- 详细情况 -->
<label>
  <view class="text-box">
    <text class="information-box">详细
    情况</text>
    <view class="detail-box">
      <scroll-view style="width: 500rpx;height: 200rpx;">
        <textarea style="width: 500rpx;" model:value="{{studentDetails}}"/>
      </scroll-view>
    </view>
  </view>
</label>

<!-- 老师要求 -->
<view class="topic" style="margin-bottom: -15rpx;">
  <text style="font-size: large;">老师要求</text>
</view>
  <!-- 性别 -->
  <label>
    <view class="text-box">
    <text class="information-box">性别</text>  <radio-group bindchange="toChangeTeacherGender">
    <view class="grade-box">
      <view class="scool-grade">
        <radio checked="1" value="无要求"/>
        <text>无要求</text>
      </view>
      <view class="scool-grade">
        <radio value="男"/>
        <text>男</text>
      </view>
      <view class="scool-grade">
        <radio value="女"/>
        <text>女</text>
      </view>
    </view>
  </radio-group>
  </view>
  <view class="line"></view>
  </label> 
  <!-- 学校 -->
  <label>
  <view class="text-box">
    <text class="information-box">学校</text>
      <radio-group bindchange="toChangeTeacherSchool">
        <view class="grade-box">
          <view class="scool-grade">
            <radio checked="1" value="无要求"/>
            <text>无要求</text>
          </view>
          <view class="scool-grade">
            <radio value="985"/>
            <text>985</text>
          </view>
          <view class="scool-grade">
            <radio value="211"/>
            <text>211</text>
          </view>
          <view class="scool-grade">
            <radio value="双一流"/>
            <text>双一流</text>
          </view>
          <view class="scool-grade">
            <radio value="一本"/>
            <text>一本</text>
          </view>
          <view class="scool-grade">
            <radio value="二本"/>
            <text>二本</text>
          </view>
        </view>
      </radio-group>
  </view>
  <view class="line"></view>
  </label>
  <!-- 学历 -->
  <label>
  <view class="text-box">
    <text class="information-box">学历</text>  <radio-group bindchange="toChangeTeacherAcademic">
    <view class="grade-box">
      <view class="scool-grade">
        <radio checked="1" value="无要求"/>
        <text>无要求</text>
      </view>
      <view class="scool-grade">
        <radio value="本科"/>
        <text>本科</text>
      </view>
      <view class="scool-grade">
        <radio value="研究生"/>
        <text>研究生</text>
      </view>
    </view>
  </radio-group>
  </view>
  <view class="line"></view>
  </label>
  <!-- 家教经验 -->
  <label>
  <view class="text-box">
    <text class="information-box">经验</text>  <radio-group bindchange="toChangeTeacherExperience">
    <view class="grade-box">
      <view class="scool-grade">
        <radio checked="1" value="无要求"/>
        <text>无要求</text>
      </view>
      <view class="scool-grade">
        <radio value="有经验"/>
        <text>有经验</text>
      </view>
    </view>
  </radio-group>
  </view>
  <view class="line"></view>
  </label>
  <!-- 其他要求 -->
  <label>
  <view class="text-box">
    <text class="information-box">其他</text>
    <view class="detail-box">
      <scroll-view style="width: 500rpx;height: 200rpx;" scroll-y>
        <textarea style="width: 500rpx;" model:value="{{teacherNeed}}"/>
      </scroll-view>
    </view>  
  </view>

  </label>



<!-- 薪资待遇 -->
<view class="topic" style="margin-bottom: -15rpx;">
  <text style="font-size: large;">薪资待遇 </text>
  <checkbox style="margin-left: 50rpx;" model:checked="{{isSalaryFaceTalk}}"/>面谈
</view>
<!-- 待遇 -->
<label wx:if="{{!isSalaryFaceTalk}}">
  <view style="width: 100%;">
    <view class="{{isSalaryReady ? 'text-box' : 'text-box-warning'}}">
      <text class="information-box">薪资*</text>
      <view style="width: 110rpx;" class="region-detail">
        <input maxlength="7" type="number" style="width: 110rpx;" placeholder="薪资" model:value="{{salary}}"/>
      </view>
      <radio-group style="z-index: 50;" bindchange="toChangeSalaryType">
        <radio checked="1" value="h"/>时薪 <radio value="d"/>日薪 <radio value="a"/>总薪
      </radio-group>
    </view>
    <view class="line"></view>
    <view class="text-box">
      <text class="information-box">待遇</text>
      <view style="width: 550rpx;display: flex;flex-wrap: wrap;">
        <view style="width: 275rpx;">
          <checkbox model:checked="{{hasCar}}"/>车接车送
        </view>
        <view style="width: 275rpx;">
          <checkbox model:checked="{{hasSubwayTip}}"/>地铁费报销
        </view>
        <view style="width: 550rpx;display: flex;margin-top: 20rpx;">
          <checkbox model:checked="{{hasOtherBenefit}}"/>其他待遇
          <view wx:if="{{hasOtherBenefit}}" class="region-detail" style="width: 250rpx;margin-left: 25rpx;">
            <input type="text" model:value="{{otherBenefit}}" placeholder="可提供待遇"/>
          </view>
        </view>
      </view>
    </view>
  </view>
  
  <view class="line"></view>
</label>


<!-- 提交 -->
<label>
  <view style="display: flex;margin-top: 10rpx;margin-left: 2.5%;">
    <checkbox model:checked="{{isInformationChecked}}"/>确认信息无误并同意
  </view>
  <view style="color: blue;height: 40rpx; width: 100%;margin-bottom: 20rpx;" bind:tap="showDeal">《鲤梦同行小程序隐私保护指引》</view>
  <view class="button-outer-box">
    <button type="{{isInformationChecked ? 'primary' : 'default'}}" disabled="{{isInformationChecked ? '' : 't'}}" bind:tap="toSubmit">提交</button>
  </view>  
</label>