  height: 4%;
  border-bottom: darkgrey 2rpx solid;
  position: fixed;
  top: 0;
  left: 0;
}
.information-big-box {

  position: fixed;
  left: 0;
  top:4.5%;
  height: 90%;
  width: 100%;
}
.setting-switch {
  position: fixed;
  right:20rpx;
  bottom: 40rpx;
  z-index: 999;
}
.switch-box {
  display: flex;
  justify-content: center;  
  align-items: center;
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 999;
}
.delete-button {
  position: absolute;
  height: 0rpx;
  left: 1%;
  top: 20%;
  z-index: 100; 
}
.big-box {
